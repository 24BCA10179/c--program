#include <stdio.h>

int main () {
    int n, sum = 0;
    printf("enter the number of odd natural number");
    scanf ("%d", &n);
    printf("the first %d odd natural number are:\n",n);
    for (int i = 0;i < n; i++){
        int odd_number = 2 * i + 1;
        printf("%d",odd_number);
        sum += odd_number;
        
    }
        printf("\nsum of the first %d odd natural numbers: %d\n", n, sum);
    
  






    return 0;
}
